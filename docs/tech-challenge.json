{
  "openapi": "3.1.0",
  "info": {
    "title": "tech-challenge",
    "version": "1.0",
    "description": "API do Tech Challenge",
    "contact": {
      "name": "Lucas Cavagnolli"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/customers/{customerId}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "customerId",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Get Customer Info by ID",
        "tags": [
          "Cliente"
        ],
        "responses": {
          "200": {
            "description": "Customer Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                },
                "examples": {
                  "Get Customer Alice Smith": {
                    "value": {
                      "id": 142,
                      "name": "Alice Smith",
                      "cpf": "12345679810",
                      "email": "alice.smith@gmail.com",
                      "createdAt": "2019-08-24"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Customer Not Found"
          }
        },
        "operationId": "get-customer",
        "description": "Retrieve the information of the customer with the matching customer ID."
      },
      "patch": {
        "summary": "Atualiza Informação do Cliente",
        "operationId": "update-customer",
        "responses": {
          "200": {
            "description": "Customer Updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                },
                "examples": {
                  "Updated Customer Rebecca Baker": {
                    "value": {
                      "id": 13,
                      "name": "Rebecca Baker",
                      "cpf": "1234567910",
                      "email": "rebecca@gmail.com",
                      "createdAt": "2019-08-24"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Customer Not Found"
          },
          "409": {
            "description": "Email Already Taken"
          }
        },
        "description": "Update the information of an existing customer.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "Atualiza Nome": {
                  "value": {
                    "name": "Rebecca Baker"
                  }
                },
                "Atualiza Email": {
                  "value": {
                    "email": "rebecca@gmail.com"
                  }
                }
              }
            }
          },
          "description": "Atualiza as propriedades do cliente."
        },
        "tags": [
          "Cliente"
        ]
      }
    },
    "/customers": {
      "post": {
        "summary": "Cria Novo Cliente",
        "operationId": "create-customer",
        "responses": {
          "201": {
            "description": "Cliente Criado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                },
                "examples": {
                  "Novo Cliente": {
                    "value": {
                      "id": 12,
                      "name": "Bob Fellow",
                      "cpf": "13245678910",
                      "email": "bob.fellow@gmail.com",
                      "createAt": "2020-11-18"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Informação requirida faltando"
          },
          "409": {
            "description": "Email ou CPF já utilizado"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "cpf",
                  "email"
                ]
              },
              "examples": {
                "Criar um cliente": {
                  "value": {
                    "name": "Bob Fellow",
                    "cpf": "12345678910",
                    "email": "bob.fellow@gmail.com"
                  }
                }
              }
            }
          },
          "description": "Post the necessary fields for the API to create a new customer."
        },
        "description": "Cria um novo cliente.",
        "tags": [
          "Cliente"
        ]
      },
      "parameters": [],
      "get": {
        "summary": "Lista Clientes",
        "operationId": "list-customer",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "tags": [
          "Cliente"
        ],
        "description": "Lista clientes  ",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "cpf",
            "description": "Filtro por CPF"
          }
        ]
      }
    },
    "/products": {
      "post": {
        "summary": "Cria Produto",
        "operationId": "create-product",
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Created"
          }
        },
        "description": "Cria produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "categoryId": {
                    "type": "integer"
                  }
                }
              },
              "examples": {
                "Cria Produto": {
                  "value": {
                    "name": "Água",
                    "price": 2.5,
                    "categoryId": 1
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Lista Produtos",
        "operationId": "list-products",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Lista Produtos",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "categoryId",
            "description": "ID da Categoria"
          }
        ]
      }
    },
    "/products/{productId}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "productId",
          "in": "path",
          "required": true,
          "description": "ID do Produto"
        }
      ],
      "delete": {
        "summary": "Remove produto",
        "operationId": "delete-product",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Remove produto"
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "title": "Customer",
        "type": "object",
        "description": "Representa um cliente",
        "examples": [
          {
            "id": 142,
            "name": "Alice Smith",
            "cpf": "12345678910",
            "email": "alice.smith@gmail.com",
            "createdAt": "2019-08-24"
          }
        ],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Identificador único do cliente."
          },
          "name": {
            "type": "string",
            "description": "Nome do cliente"
          },
          "cpf": {
            "type": "string",
            "description": "CPF do cliente"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "E-mail do cliente"
          },
          "createdAt": {
            "type": "string",
            "format": "date",
            "description": "A data que o cliente foi criado."
          }
        },
        "required": [
          "id",
          "name",
          "cpf",
          "email"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "Cliente"
    }
  ]
}